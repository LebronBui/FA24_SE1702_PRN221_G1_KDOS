@page
@model KDOS.WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    <div class="text-center">
    <h1 class="display-4">Login</h1>
    <form method="post">        
        <div class="form-group">
            <label for="Email">Email</label>
            <input class="form-control" id="Email" name="Email" asp-for="Customer.Email" />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" asp-for="Customer.Password" />
            <span asp-validation-for="Customer.Password" class="text-danger"></span>
        </div>
        <button type="submit">Sign In</button>
    </form>
    <p>Don't have an account? <a asp-page="/SignUp">Sign Up</a></p>
    </div>
}