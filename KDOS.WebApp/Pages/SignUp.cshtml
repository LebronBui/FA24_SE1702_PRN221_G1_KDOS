@page
@model KDOS.WebApp.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    <form method="post">
        <div class="form-group">
            <label for="CustomerName">Name</label>
            <input class="form-control" id="CustomerName" name="CustomerName" asp-for="Customer.CustomerName" />
            <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input class="form-control" id="Email" name="Email" asp-for="Customer.Email" />
            <span asp-validation-for="Customer.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" asp-for="Customer.Password" />
            <span asp-validation-for="Customer.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
