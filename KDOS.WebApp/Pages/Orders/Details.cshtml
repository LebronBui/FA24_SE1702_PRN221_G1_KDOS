@model KDOS.WebApp.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OriginalLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OriginalLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.ShippingMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShippingMethod)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.TotalCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.TotalCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Price.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a> |
    <a asp-page="../CustomDeclaration/Create" asp-route-id="@Model.Order.Id">Create custom declaration</a>
</div>
<h1>Custom Declaration</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].CustomsAgent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].Transportation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].InspectionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].ImportPermit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].QuarantineRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].CustomsFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].Status)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.CustomsDeclaration[0].SenderCustomer.CustomerName)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CustomsDeclaration)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Sender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Receiver)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomsAgent)
                </td>
                <td>
                    @item.Transportation.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InspectionDate)
                </td>
                <td>
                    @item.ImportPermit.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuarantineRequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomsFee)
                </td>
                <td>
                    @item.Status.ToString()
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.SenderCustomer.CustomerName)
                </td> *@
                <td>
                    <a asp-page="../CustomDeclaration/Edit" asp-route-id="@item.Id">Edit</a> |
                    @* <a asp-page="../CustomDeclaration/Details" asp-route-id="@item.Id">Details</a> | *@
                    <a asp-page="../CustomDeclaration/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
